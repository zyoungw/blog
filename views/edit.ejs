<%- include header %>
  <form method="POST">
    标题：<br>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>
    正文：<br>
    标签：<br>
    <% var tags = ["", "", ""] %>
    <% post.tags.forEach((tag, index) => { %>
      <% if (tag) { %>
        <% tags[index] = tag %>
      <% } %>
    <% }) %>
    <input type="text" name="tag1" value="<%= tags[0] %>">
    <input type="text" name="tag2" value="<%= tags[1] %>">
    <input type="text" name="tag3" value="<%= tags[2] %>">
    <br>
    <textarea name="post" rows="20" cols="100"><%= post.post %></textarea><br>
    <input type="submit" value="保存修改">
  </form>
<%- include footer %>